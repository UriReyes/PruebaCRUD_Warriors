{% extends 'base.html.twig' %}

{% block body %}
     <div class="container pt-5">
        <table class="table">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th colspan="3" class="estudent">Estudiante</th>
                    <th colspan="3">Grupo</th>
                </tr>
                <tr class="text-center">
                    <th scope="col" class="estudent">Id</th>
                    <th scope="col" class="estudent">Nombre</th>
                    <th scope="col" class="estudent">Apellidos</th>
                    <th scope="col">Semestre</th>
                    <th scope="col">Grupo</th>
                    <th scope="col">Turno</th>
                </tr>
            </thead>
            <tbody>
            {% for estudiante in estudiantes %}
                <tr class="text-center">    
                    <th scope="row">{{ estudiante.id }}</th>
                    <td>{{ estudiante.nombre }}</td>
                    <td>{{ estudiante.apellidos }}</td>
                    <td>{{ estudiante.grupo.semestre }}</td>
                    <td>{{ estudiante.grupo.grupo }}</td>
                    <td>{{ estudiante.grupo.turno }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

